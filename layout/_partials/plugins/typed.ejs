<script>
  (function (window, document) {
    const subtitle = document.getElementById('subtitle');
    if (!subtitle || !('Typed' in window)) {
      return;
    }
    subtitle.innerText = '';

    const text = subtitle.getAttribute('data-typed-text');
    const typed = new window.Typed('#subtitle', {
      strings: [
        '  ',
        text
      ],
      cursorChar: '_',
      typeSpeed: 80,
      loop: false
    });
  })(window, document);
</script>
