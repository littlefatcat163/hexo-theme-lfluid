// note
.note
  border-left 0.35rem solid
  margin 1.5rem 0
  transition color .2s ease-in-out
  a
    color var(--text-color)
    transition color .2s ease-in-out

  *:last-child
    margin-bottom 0

// group-image
.group-image-container
  margin 1.5rem auto
  img
    width: 100%
    height: 100%
    object-fit: cover
  .image-adapter
    padding-bottom: 100%
    position: relative
    > div
      width: 100%
      height: 100%
      position: absolute
      left: 0
      top: 0
      z-index: 2
