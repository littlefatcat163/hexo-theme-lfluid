// popover
.lnote-popover-btn
    --bs-btn-padding-y 0
    --bs-btn-padding-x 0.28rem
    --bs-btn-line-height 1
.lnote-popover
    --bs-popover-border-color var(--bs-primary)
    --bs-popover-body-padding-x 0
    --bs-popover-body-padding-y 0
    --bs-popover-bg transparent
    &.secondary
      --bs-popover-border-color var(--bs-secondary)
    &.info
      --bs-popover-border-color var(--bs-info)
    &.success
      --bs-popover-border-color var(--bs-success)
    &.warning
      --bs-popover-border-color var(--bs-warning)
    &.danger
      --bs-popover-border-color var(--bs-danger)
    &.light
      --bs-popover-border-color var(--bs-light)
    &.dark
      --bs-popover-border-color var(--bs-dark)

// note
.note
  border-left 0.35rem solid
  margin 1.5rem 0
  transition color .2s ease-in-out
  a
    color var(--text-color)
    transition color .2s ease-in-out

  *:last-child
    margin-bottom 0

// group-image
.group-image-container
  margin 1rem auto
  img
    width 100%
    height 100%
  .image-adapter
    padding-bottom 100%
    position relative
    > div
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      z-index 2

// chat
.chats
  .chat-avatar
    width: 2.8rem
    height: 2.8rem
  .chat-name
    font-size: 0.8rem
    line-height: 1
    max-width: 84%
    white-space: nowrap
    text-overflow: ellipsis
  .chat-content
    max-width: 84%
    :last-child
      margin-bottom: 0
  .chat-sender
    .chat-content
      background-color: var(--chat-sender)
  .chat-responder
    .chat-content
      background-color: var(--chat-responder)